[user]
  name = {{ .fullname }}
  email = {{ .emailaddress }}
  signingkey = {{ .signingkey }}
[init]
  defaultBranch = main
[pull]
  rebase = true
[push]
  default = current
  autoSetupRemote = true
[commit]
  gpgsign = true
[gpg]
  program = gpg
[blame]
  ignoreRevsFile = .git-blame-ignore-revs
[core]
  excludesfile = ~/.gitignore
